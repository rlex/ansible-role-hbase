[Unit]
Description=HBase Thrift2 Server
After=network.target

[Service]
Environment=HADOOP_HOME={{ hadoop_home }} HBASE_HOME={{ hbase_home }}
WorkingDirectory={{ hbase_home }}
ExecStart={{ hbase_home }}/bin/hbase thrift2 start
User={{ hadoop_user }}
KillMode=process
KillSignal=SIGINT
Restart=on-failure

[Install]
WantedBy=multi-user.target
